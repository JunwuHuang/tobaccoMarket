#image-wrap {
    width: 750rpx;
    height: 420rpx;
}
#image-wrap image {
    display: block;
    width: 300rpx;
    height: 300rpx;
    margin: 20rpx auto;
    border: 1px dashed #f3f3f3;
}
#image-wrap>button {
    display: block;
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #06f;
    color: #fff;
    margin: 0 auto;
}
#main-form {
    display: block;
    width: 100%;
    box-sizing: border-box;
    padding: 80rpx 40rpx;
}
#main-form label {
    display: flex;
    width: 100%;
    height: 140rpx;
    margin-bottom: 40rpx;
    color: #333;
    flex-direction: column;
    justify-content: space-between;
}
#main-form label>input {
    flex: 1;
    border-bottom: 1px solid #999;
}
#main-form .btn_wrap {
    display: flex;
    justify-content: center;
    align-items: center;
}
#main-form .btn_wrap #btn-cancel {
    margin-right: 20rpx;
}
#main-form .btn_wrap #btn-submit {
    margin-left: 20rpx;
    background-color: #06f;
    color: #fff;
    border: 1px solid #06c;
}